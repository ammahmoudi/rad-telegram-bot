{
  "name": "@rad/mcp-planka",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/planka.js",
  "types": "dist/planka.d.ts",
  "exports": {
    ".": {
      "types": "./dist/planka.d.ts",
      "default": "./dist/planka.js"
    },
    "./planka": {
      "types": "./dist/planka.d.ts",
      "default": "./dist/planka.js"
    }
  },
  "bin": {
    "mcp-planka": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --build tsconfig.json --force",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "vitest run integration",
    "schema:generate": "tsx generate-api-schemas.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@rad/shared": "*",
    "dayjs": "^1.11.19",
    "dotenv": "^16.4.7",
    "i18next": "^25.7.3",
    "jalaali-js": "^1.2.8",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jalaali-js": "^1.2.0",
    "@types/node": "^22.10.0",
    "@vitest/ui": "^2.1.8",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  }
}
