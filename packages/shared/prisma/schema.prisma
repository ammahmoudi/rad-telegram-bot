generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

model LinkState {
  state          String @id
  telegramUserId String
  expiresAt      BigInt

  @@index([expiresAt])
}

model PlankaToken {
  telegramUserId  String @id
  plankaBaseUrl   String
  accessTokenEnc  String
  updatedAt       BigInt
}

model SystemConfig {
  key   String @id
  value String
}
