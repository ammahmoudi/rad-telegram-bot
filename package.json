{
  "name": "rastar-telegram-bot",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19 || ^22.12 || >=24"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n bot,portal,admin -c blue,green,yellow \"npm -w apps/telegram-bot run dev\" \"npm -w apps/link-portal run dev\" \"npm -w apps/admin-panel run dev\"",
    "build": "tsc -b",
    "prisma:generate": "npm -w packages/shared run prisma:generate",
    "admin:build": "npm -w apps/admin-panel run build",
    "admin:start": "npm -w apps/admin-panel run start",
    "start": "npm -w apps/telegram-bot run start"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "tsx": "^4.20.0",
    "typescript": "^5.8.2"
  }
}
